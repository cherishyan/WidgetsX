<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/white_stroke_bg">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/settings_dialog_logout_title"
        android:textColor="#262626"
        android:textSize="@dimen/xxh_text_size"
       android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dialogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="400400400"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:textColor="#262626"
        android:textSize="@dimen/xxh_text_size"
        android:layout_below="@id/dialogTitle"
        android:layout_centerHorizontal="true" />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividerLine"
        android:layout_below="@id/dialogContent"

        />
    <LinearLayout
        android:id="@+id/btnLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line">
        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="@string/app_cancel"
            android:textColor="@color/title"
            android:textSize="@dimen/xh_text_size"
             />
        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/theme_btn_rightbottom_corner"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/app_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/xh_text_size" />
    </LinearLayout>



</RelativeLayout>
